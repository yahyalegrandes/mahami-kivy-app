name: Build Tasks App APK

on:
  push:
    branches: [ "main" ]

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Download code
      uses: actions/checkout@v3

    - name: Build APK with Buildozer
      uses: digreatbrian/buildozer-action@v2
      with:
        workdir: .
        buildozer_version: stable

    - name: Upload APK
      uses: actions/upload-artifact@v3
      with:
        name: tasks-app-apk
        path: bin/*.apk
